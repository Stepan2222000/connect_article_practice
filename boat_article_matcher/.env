# Параметры валидации артикулов и брендов
VALID_BRANDS=YAMAHA,KAWASAKI,SUZUKI  # Список валидных брендов (через запятую)
MIN_ARTICLE_LEN_DIGITS=5             # Минимальная длина для числовых артикулов
MIN_ARTICLE_LEN_ALPHANUM=6           # Минимальная длина для буквенно-цифровых артикулов
TEXT_LIMIT=10                        # Лимит текстов для обработки (0 или пустое = без лимита)

# Параметры подключения к PostgreSQL
DB_HOST=localhost                    # Хост базы данных
DB_PORT=5432                        # Порт базы данных
DB_NAME=boat_parts                  # Название базы данных
DB_USER=test_user                   # Имя пользователя БД
DB_PASSWORD=test_password           # Пароль пользователя БД